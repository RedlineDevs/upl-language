{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "UPL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#booleans"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.upl",
				"match": "\\b(if|else|let|loop|save|exit)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.upl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.upl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.upl",
					"match": "//.*$"
				},
				{
					"name": "comment.block.upl",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"functions": {
			"patterns": [{
				"name": "support.function.upl",
				"match": "\\b(print|add|multiply|save)\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.upl",
				"match": "\\b[0-9]+\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.upl",
				"match": "(=|,|;|\\(|\\)|\\{|\\}|\\[|\\])"
			}]
		},
		"booleans": {
			"patterns": [{
				"name": "constant.language.upl",
				"match": "\\b(true|false)\\b"
			}]
		}
	},
	"scopeName": "source.upl"
}
